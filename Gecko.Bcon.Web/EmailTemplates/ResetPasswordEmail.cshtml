@model dynamic
<body style="background-color: #222222; padding: 1em;">
    <div  class="content" style="background-color: #f3f3f3; border: 1px solid #d3d3d3; border-radius: 4px 4px 4px 4px; box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05) inset; margin-bottom: 20px; min-height: 20px; padding: 1em;">
 
        <p>Hi @Model.Name,</p>
        
        <p>
            You have requested to change your password. If you did not make this request, you can ignore this email. 
        </p>
        <p>
            You can <a href="@Model.ConfirmationLink">change your password </a> by following this link:
            <a href="@Model.ConfirmationLink">@Model.ConfirmationLink</a>

        </p>
        <p>
            If the link does not work, you can copy and paste the link below into your browser:
        </p>
        <pre>@Model.ConfirmationLink</pre>
    </div>
    <div class="footer" style="color: grey; font-size: small; padding: 5px" >
        <p>
          
        </p>
        <p>
        
        </p>
    </div>
</body>